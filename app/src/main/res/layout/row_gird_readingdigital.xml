<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="145dp"
    android:layout_height="wrap_content"
    android:background="@drawable/senka_kniga_grid"
    android:paddingRight="7dp"
    android:paddingLeft="7dp"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    >
    <RelativeLayout android:id="@+id/kniga_senka"
        android:layout_width="145dp"
        android:layout_height="185dp"
        android:layout_margin="2dp"
        android:padding="1dp"
        android:background="@drawable/book_cell_img"
        >
        <ImageView
            android:id="@+id/item_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            />

        <TextView android:id="@+id/item_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone"
            android:gravity="center"
            android:text="Избриши"
            android:paddingTop="90dp"
            android:textColor="#fff"
            android:background="#BF000000"
            android:layout_marginTop="0dp"
            android:textSize="14dp"
            android:maxLines="2"
            android:lines="2" >
        </TextView>

        <ImageView
            android:id="@+id/kng_brishi"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/brishi_kniga_kopce" />
    </RelativeLayout>

    <TextView android:id="@+id/naslov_kn_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Сончевата трпеза"
        android:layout_below="@+id/kniga_senka"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#1E1E1E"

        android:textSize="12dp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="0dp"
        >
    </TextView>

    <TextView android:id="@+id/avtor_kn_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Лила Арсова"
        android:layout_below="@+id/naslov_kn_view"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#686868"
        android:textSize="11dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="0dp"
        >
    </TextView>
    <RelativeLayout android:id="@+id/line_book"
        android:layout_width="match_parent"
        android:background="#bebebe"
        android:layout_below="@+id/avtor_kn_view"
        android:layout_height="0.5dp">

    </RelativeLayout>

    <TextView android:id="@+id/book_price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="right"
        android:text=""
        android:layout_below="@+id/line_book"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#686868"
        android:textSize="11dp"
        >
    </TextView>
</RelativeLayout>